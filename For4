decimal Manota = 0, meNota = 0, media, notas, soma = 0;

for (int i = 1; i < 5; i++)
{
    Console.WriteLine("Digite as notas do aluno " + i);
    notas = Convert.ToDecimal(Console.ReadLine());

    soma = soma + notas;

    if(i == 0 || notas < meNota)
    {
        meNota = notas;
    }


}
Console.WriteLine("Á maior nota foi: " + Manota);
Console.WriteLine("Á menor nota foi: " + meNota);
Console.WriteLine("Á média das notas foi: " + soma);
